<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/resources/stylesheets/estiloLogin.css" rel="stylesheet" type="text/css">
  <title>Register</title>
</head>

<body>
  <div class="form">
    <div class="form-toggle"></div>
    <div class="form-panel one">
      <div class="form-header">
        <h1>REGISTRO MAYAWEB</h1>
      </div>
      <div class="form-content">
        <form action="/register" method="POST">
          <div class="form-group"><label for="user">Usuario</label><input type="text" id="user" name="user"
              required="required" /></div>
          <div class="form-group"><label for="name">Nombre</label><input type="text" id="name" name="name"
              required="required" /></div>
          <div class="form-group"><label for="lastname">Apellido</label><input type="text" id="lastname" name="lastname"
              required="required" /></div>
          <div class="form-group"><label for="password">Contrase√±a</label><input type="password" id="pass" name="pass"
              required="required" /></div>
          <div class="form-group"><button type="submit">Registrar</button></div>
        </form>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <% if (typeof alert !="undefined" ) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
 }).then(() => {
          window.location = '/<%= ruta %>'
        })
    </script>
    <% } %>
      </div>
</body>

</html>